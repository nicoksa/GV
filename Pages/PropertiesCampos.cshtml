@page
@model GV.Pages.PropertiesCamposModel
@{
    ViewData["Title"] = "División Campos";
}



<link rel="stylesheet" href="css/styleProperties.css" />

<div class="site-section site-section-sm bg-light">
    <div class="container">
        <!-- Título División Campos -->
        
                <!-- Título División Campos -->
                <div class="row mb-3">
                    <div class="col-12">
                        <h4 class="division-title text-muted"
                            style="font-family: 'Oswald', sans-serif; font-weight: 300; letter-spacing: 1px;">
                            <i class="fas fa-tractor me-2"></i> División Campos
                        </h4>
                        <hr class="mt-1" style="border-top: 1px solid #eee; width: 100px;">
                    </div>
                </div>

                <!-- Filtros para Campos -->
                <div class="row mb-5 justify-content-center">
                    <div class="col-lg-10">
                        <div class="property-filter-container bg-white p-4 shadow-sm">
                            <div class="filter-header text-center mb-4">
                                <h3 class="filter-title position-relative d-inline-block mb-4"
                                    style="font-family: 'Oswald', sans-serif; font-weight: 300; letter-spacing: 1px; color: #333;">
                                    BUSCAR CAMPOS
                                </h3>
                            </div>

                            <form class="filter-form">
                                <!-- Fila 1: Filtros principales -->
                                <div class="row g-3 mb-3">
                                    <div class="col-md-3">
                                        <div class="filter-group">
                                            <label for="property-type" class="form-label small text-muted mb-1">TIPO DE CAMPO</label>
                                            <select class="form-select border-1" id="property-type">
                                                <option value="" selected disabled hidden>Todos</option>
                                                <option>Agrícola</option>
                                                <option>Ganadero</option>
                                                <option>Mixto</option>
                                             
                                            </select>
                                        </div>
                                    </div>

                                    <div class="col-md-3">
                                        <div class="filter-group">
                                            <label for="location" class="form-label small text-muted mb-1">UBICACIÓN</label>
                                            <select class="form-select border-1" id="location">
                                                <option value="" selected disabled hidden>Todas</option>
                                                <option>Saladillo</option>
                                                <option>25 de Mayo</option>
                                                <option>Las Flores</option>
                                                <option>Roque Pérez</option>
                                                <option>General Alvear</option>
                                                <option>Otro</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="col-md-3">
                                        <div class="filter-group">
                                            <label for="surface" class="form-label small text-muted mb-1">SUPERFICIE (Ha)</label>
                                            <select class="form-select border-1" id="surface">
                                                <option value="" selected disabled hidden>Todas</option>
                                                <option>Menos de 50 Ha</option>
                                                <option>50 - 100 Ha</option>
                                                <option>100 - 200 Ha</option>
                                                <option>200 - 500 Ha</option>
                                                <option>Más de 500 Ha</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="col-md-3 d-flex align-items-end">
                                        <button type="submit" class="btn btn-dark w-100 py-2">
                                            <i class="fas fa-search me-2"></i> Buscar
                                        </button>
                                    </div>
                                </div>

                                <!-- Fila 2: Filtros de precio -->
                                <div class="row g-3 mt-2">
                                    <div class="col-md-6">
                                        <div class="row g-2">
                                            <div class="col-md-6">
                                                <div class="advanced-filters collapse" id="advancedFilters">
                                                    <label for="min-price" class="form-label small text-muted mb-1">PRECIO MÍNIMO</label>
                                                    <div class="input-group">
                                                        <span class="input-group-text" style="font-size: 0.8rem; padding: 0.375rem 0.5rem; height: calc(2.25rem + 2px);">U$S</span>
                                                        <input type="number" class="form-control" id="min-price" placeholder="Mínimo" min="0" step="1000" style="height: calc(2.25rem + 2px);">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="advanced-filters collapse" id="advancedFilters">
                                                    <label for="max-price" class="form-label small text-muted mb-1">PRECIO MÁXIMO</label>
                                                    <div class="input-group">
                                                        <span class="input-group-text" style="font-size: 0.8rem; padding: 0.375rem 0.5rem; height: calc(2.25rem + 2px);">U$S</span>
                                                        <input type="number" class="form-control" id="max-price" placeholder="Máximo" min="0" step="1000" style="height: calc(2.25rem + 2px);">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Botón para mostrar filtros avanzados -->
                                <div class="text-center mt-3">
                                    <a class="toggle-advanced-filters text-decoration-none text-muted" data-bs-toggle="collapse" href="#advancedFilters" role="button" aria-expanded="false" aria-controls="advancedFilters">
                                        <span class="filter-toggle-text">Más opciones de búsqueda</span>
                                        <i class="fas fa-chevron-down ms-2 small"></i>
                                    </a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

        <!-- Cards de Campos -->
        <div class="site-section site-section-sm bg-light">
            <div class="container">
                <div class="row mb-5">
                    <!-- Campo 1 -->
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="property-entry h-100">
                            <a asp-page="/Property" class="property-thumbnail">
                                <div class="offer-type-wrap">
                                    <span class="offer-type bg-success">Agrícola</span>
                                </div>
                                <img src="images/campos/campo7.webp" alt="Campo agrícola con excelente infraestructura" class="img-fluid">
                            </a>
                            <div class="p-4 property-body">
                                <h2 class="property-title"><a asp-page="/Property">Campo agrícola con excelente infraestructura</a></h2>
                                <span class="property-location d-block mb-3"><span class="property-icon icon-room"></span> Ruta 205, Km 128, 25 de Mayo</span>
                                <strong class="property-price text-primary mb-3 d-block text-success">U$S12,000</strong>
                                <ul class="property-specs-wrap mb-3 mb-lg-0">
                                    <li>
                                        <span class="property-specs">Hectáreas</span>
                                        <span class="property-specs-number">150</span>
                                    </li>
                                    <li>
                                        <span class="property-specs">Ubicación</span>
                                        <span class="property-specs-number">25 de Mayo</span>
