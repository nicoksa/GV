@page
@{
    ViewData["Title"] = "Gestión de Campos";
    ViewData["HideTitle"] = true;
    Layout = "_AdminLayout";
}

<div class="admin-header mb-4">
    <h2>@ViewData["Title"]</h2>
    <a href="/Admin/CrearCampo" class="btn btn-primary">
        <i class="fas fa-plus-circle"></i> Nuevo Campo
    </a>
</div>

<div class="search-bar">
    <input type="text" id="searchInput" placeholder="Buscar propiedades..." class="form-control">
    <button class="btn btn-search"><i class="fas fa-search"></i></button>
</div>

<div class="table-responsive">
    <table class="admin-table">
        <thead>
            <tr>
                <th><i class="fas fa-image"></i></th>
                <th>ID</th>
                <th>Nombre</th>
                <th>Hectáreas</th>
                <th>Ubicación</th>
                <th>Precio</th>
                <th>Destacado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <!-- Ejemplo de datos estáticos -->
            <tr>
                <td><img src="/images/campos/agricolaEj1.jpg" alt="Miniatura" class="img-thumbnail"></td>
                <td>201</td>
                <td>Campo Agrícola</td>
                <td>150.50 ha</td>
                <td>Pergamino, Buenos Aires</td>
                <td>$1,200,000</td>
                <td><i class="fas fa-star text-warning"></i></td>
                <td class="action-buttons">
                    <a href="/Admin/EditarCampo" class="btn btn-sm btn-edit">
                        <i class="fas fa-edit"></i>
                    </a>
                    <button class="btn btn-sm btn-danger" onclick="confirmDelete(201)">
                        <i class="fas fa-trash-alt"></i>
                    </button>
                </td>
            </tr>
            <tr>
                <td><img src="/images/campos/ganaderoEj1.jpg" alt="Miniatura" class="img-thumbnail"></td>
                <td>202</td>
                <td>Estancia Ganadera</td>
                <td>250.75 ha</td>
                <td>General Acha, La Pampa</td>
                <td>$1,800,000</td>
                <td><i class="far fa-star text-muted"></i></td>
                <td class="action-buttons">
                    <a href="/Admin/EditarCampo" class="btn btn-sm btn-edit">
                        <i class="fas fa-edit"></i>
                    </a>
                    <button class="btn btn-sm btn-danger" onclick="confirmDelete(202)">
                        <i class="fas fa-trash-alt"></i>
                    </button>
                </td>
            </tr>
        </tbody>
    </table>
</div>


<!-- Modal de confirmación -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmar Eliminación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                ¿Estás seguro que deseas eliminar esta propiedad?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Eliminar</button>
            </div>
        </div>
    </div>
</div>



@section Scripts {

    <script>
        // Mismo script de búsqueda y eliminación que en propiedades
        document.getElementById('searchInput').addEventListener('keyup', function() {
            const value = this.value.toLowerCase();
            document.querySelectorAll('table tbody tr').forEach(row => {
                row.style.display = row.textContent.toLowerCase().includes(value) ? '' : 'none';
            });
        });

        let currentIdToDelete = 0;

        function confirmDelete(id) {
            currentIdToDelete = id;
            const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
            modal.show();
        }

        document.getElementById('confirmDeleteBtn').addEventListener('click', function() {
            alert(`Campo ${currentIdToDelete} eliminado (simulado)`);
            const modal = bootstrap.Modal.getInstance(document.getElementById('deleteModal'));
            modal.hide();
        });
    </script>
}