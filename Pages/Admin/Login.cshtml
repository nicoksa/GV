@page "/Admin/Login"
@model GV.Pages.Admin.LoginModel
@{
    Layout = null;
}


<meta name="viewport" content="width=device-width, initial-scale=1.0">

<link rel="stylesheet" href="~/css/stylesAdmin.css" />




<div class="login-container">
    <div class="login-box">


        <!-- Espacio para el logo -->
        <div class="logo-container">
            <img src="/images/logos/logo  GV.png" alt="Logo Inmobiliaria" class="login-logo">
        </div>

        <h2 class="login-title">Acceso Administrador</h2>

        <form method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Input.Email" class="form-label">Correo electrónico</label>
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Password" class="form-label">Contraseña</label>
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

     

            <button type="submit" class="btn btn-primary login-button">Iniciar sesión</button>
        </form>

  
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>


<script>
    // Mejora la experiencia en móviles
    document.addEventListener('DOMContentLoaded', function() {
        // Enfoca el primer campo al cargar
        const firstInput = document.querySelector('input[type="email"]');
        if (firstInput && window.innerWidth < 768) {
            setTimeout(() => { firstInput.focus(); }, 300);
        }

        // Previene el zoom en inputs en iOS
        document.querySelectorAll('input').forEach(input => {
            input.addEventListener('focus', function() {
                this.style.fontSize = '16px';
            });
        });
    });
</script>

