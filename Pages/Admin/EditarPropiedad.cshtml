@page
@{
    ViewData["Title"] = "Editar Propiedad Urbana";
    ViewData["HideTitle"] = true;
    Layout = "_AdminLayout";
}

<div class="admin-container">
    <div class="admin-header mb-4">
        <h1>@ViewData["Title"]</h1>
    </div>

    <form>
        <div class="row">
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5>Información Básica</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label">Título *</label>
                            <input class="form-control" value="Casa en Barrio Privado" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Descripción</label>
                            <textarea class="form-control" rows="4">Hermosa casa con amplios jardines...</textarea>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Tipo *</label>
                                    <select class="form-select" required>
                                        <option value="Casa" selected>Casa</option>
                                        <option value="Departamento">Departamento</option>
                                        <option value="PH">PH</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Precio *</label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input class="form-control" value="250000" required>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header">
                        <h5>Características</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="form-label">Ambientes</label>
                                    <input class="form-control" type="number" value="5" min="1">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="form-label">Dormitorios</label>
                                    <input class="form-control" type="number" value="3" min="0">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="form-label">Baños</label>
                                    <input class="form-control" type="number" value="2" min="1">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Superficie Total (m²)</label>
                                    <input class="form-control" type="number" value="300">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Superficie Cubierta (m²)</label>
                                    <input class="form-control" type="number" value="180">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Dirección</label>
                                    <input class="form-control" value="Calle Falsa 123">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Ubicación</label>
                                    <input class="form-control" value="Nordelta, Buenos Aires">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5>Configuración</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3 form-check form-switch">
                            <input class="form-check-input" type="checkbox" checked>
                            <label class="form-check-label">Destacada</label>
                        </div>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header">
                        <h5>Comodidades</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3 form-check">
                            <input class="form-check-input" type="checkbox" checked>
                            <label class="form-check-label">Cochera</label>
                        </div>
                        <div class="mb-3 form-check">
                            <input class="form-check-input" type="checkbox" checked>
                            <label class="form-check-label">Patio</label>
                        </div>
                        <div class="mb-3 form-check">
                            <input class="form-check-input" type="checkbox">
                            <label class="form-check-label">Aire Acondicionado</label>
                        </div>
                        <div class="mb-3 form-check">
                            <input class="form-check-input" type="checkbox" checked>
                            <label class="form-check-label">Seguridad</label>
                        </div>
                        <div class="mb-3 form-check">
                            <input class="form-check-input" type="checkbox">
                            <label class="form-check-label">Pileta</label>
                        </div>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header">
                        <h5>Imágenes</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label">Subir imágenes</label>
                            <input type="file" class="form-control" multiple accept="image/*">
                        </div>
                        <div class="image-preview">
                            <img src="/images/img_7.jpg" class="img-thumbnail m-1" width="80">
                            <img src="/images/hero_bg_1.jpg" class="img-thumbnail m-1" width="80">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-between">
            <a href="/Admin/GestionPropiedades" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Volver
            </a>
            <button type="button" class="btn btn-primary">
                <i class="fas fa-save"></i> Guardar Cambios
            </button>
        </div>
    </form>
</div>

