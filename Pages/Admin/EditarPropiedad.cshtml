@page "{id:int}"
@model GV.Pages.Admin.EditarPropiedadModel
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery
@{
    ViewData["Title"] = "Editar Propiedad";
    ViewData["HideTitle"] = true;
    Layout = "_AdminLayout";
    var token = Antiforgery.GetAndStoreTokens(HttpContext).RequestToken;
}

<link rel="stylesheet" href="~/css/styleAdminEditar.css" />

<div class="admin-container">
    <div class="admin-header mb-4">
        <h1>@ViewData["Title"]</h1>
    </div>

    <form method="post" enctype="multipart/form-data" id="propiedadForm">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Propiedad.Id" />

        <div class="row">
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5>Información Básica</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label" asp-for="Propiedad.Titulo"></label>
                            <input class="form-control" asp-for="Propiedad.Titulo" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" asp-for="Propiedad.Descripcion"></label>
                            <textarea class="form-control" asp-for="Propiedad.Descripcion" rows="4" required></textarea>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label" asp-for="Propiedad.Tipo"></label>
                                    <select class="form-select" asp-for="Propiedad.Tipo" required id="Propiedad_Tipo">
                                        <option value="Casa">Casa</option>
                                        <option value="Departamento">Departamento</option>
                                        <option value="Quinta">Quinta</option>
                                        <option value="Local">Local</option>
                                        <option value="Terreno">Terreno</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label" asp-for="Propiedad.Precio"></label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input class="form-control" asp-for="Propiedad.Precio" required>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header">
                        <h5>Características</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="form-label" asp-for="Propiedad.Ambientes"></label>
                                    <input class="form-control" asp-for="Propiedad.Ambientes" type="number" min="0" id="Propiedad_Ambientes">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="form-label" asp-for="Propiedad.Dormitorios"></label>
                                    <input class="form-control" asp-for="Propiedad.Dormitorios" type="number" min="0" id="Propiedad_Dormitorios">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="form-label" asp-for="Propiedad.Banios">Baños</label>
                                    <input class="form-control" asp-for="Propiedad.Banios" type="number" min="0" id="Propiedad_Banios">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label" asp-for="Propiedad.SuperficieTotal">Superficie Total</label>
                                    <input class="form-control" asp-for="Propiedad.SuperficieTotal" type="number" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label" asp-for="Propiedad.SuperficieCubierta">Superficie Cubierta</label>
                                    <input class="form-control" asp-for="Propiedad.SuperficieCubierta" type="number" required id="Propiedad_SuperficieCubierta">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label" asp-for="Propiedad.Direccion">Dirección</label>
                                    <input class="form-control" asp-for="Propiedad.Direccion">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label" asp-for="Propiedad.Ubicacion">Ubicación</label>
                                    <select class="form-select" asp-for="Propiedad.Ubicacion">
                                        <option value="Saladillo">Saladillo</option>
                                        <option value="Las Flores">Las Flores</option>
                                        <option value="Roque Pérez">Roque Pérez</option>
                                        <option value="25 de mayo">25 de mayo</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5>Imágenes</h5>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <label class="form-label">Subir imágenes</label>
                                    <input type="file" class="form-control" multiple accept="image/*" asp-for="Propiedad.Imagenes" id="imagenesInput">
                                    <small class="text-muted">Formatos aceptados: .jpg, .jpeg, .png. Máx. 5MB por imagen.</small>
                                </div>

                                <input type="hidden" asp-for="Propiedad.ImagenPrincipalIndex" id="imagenPrincipalIndex">

                                <!-- Vista previa de imágenes existentes + nuevas -->
                                <div class="image-preview" id="imagePreview">
                                    @foreach (var img in Model.ImagenesExistentes)
                                    {
                                        <div class="image-container @(img.EsPrincipal ? "principal-selected" : "")" data-image-id="@img.Id" data-index="@img.Index">
                                            <img src="@Url.Content(img.Url)" onerror="this.src='/images/default-property.jpg';this.onerror=null;">
                                            <div class="radio-container">
                                                <input type="radio" name="imagenPrincipalRadio" id="imagenPrincipal_@img.Index"
                                                       value="@img.Index" @(img.EsPrincipal ? "checked" : "")>
                                                <label for="imagenPrincipal_@img.Index">Principal</label>
                                            </div>
                                            <button type="button" class="btn-delete-image" data-image-id="@img.Id">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5>Configuración</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3 form-check form-switch">
                            <input class="form-check-input" type="checkbox" asp-for="Propiedad.EsDestacada">
                            <label class="form-check-label" asp-for="Propiedad.EsDestacada">Es Destacada</label>
                        </div>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header">
                        <h5>Comodidades</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3 form-check">
                            <input class="form-check-input" type="checkbox" asp-for="Propiedad.Cochera" id="Propiedad_Cochera">
                            <label class="form-check-label" asp-for="Propiedad.Cochera"></label>
                        </div>
                        <div class="mb-3 form-check">
                            <input class="form-check-input" type="checkbox" asp-for="Propiedad.Patio" id="Propiedad_Patio">
                            <label class="form-check-label" asp-for="Propiedad.Patio"></label>
                        </div>
                        <div class="mb-3 form-check">
                            <input class="form-check-input" type="checkbox" asp-for="Propiedad.Aire_acond" id="Propiedad_AireAcondicionado">
                            <label class="form-check-label" asp-for="Propiedad.Aire_acond">Aire Acondicionado</label>
                        </div>
                        <div class="mb-3 form-check">
                            <input class="form-check-input" type="checkbox" asp-for="Propiedad.Seguridad" id="Propiedad_Seguridad">
                            <label class="form-check-label" asp-for="Propiedad.Seguridad"></label>
                        </div>
                        <div class="mb-3 form-check">
                            <input class="form-check-input" type="checkbox" asp-for="Propiedad.Pileta" id="Propiedad_Pileta">
                            <label class="form-check-label" asp-for="Propiedad.Pileta"></label>
                        </div>
                    </div>
                </div>

                <!-- Sección de Videos -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5>Video (YouTube)</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label" asp-for="Propiedad.YoutubeUrl">URL de YouTube</label>
                            <input type="text"
                                   class="form-control"
                                   asp-for="Propiedad.YoutubeUrl"
                                   placeholder="https://www.youtube.com/watch?v=..."
                                   id="youtubeUrlInput">
                            <small class="text-muted">Ejemplo: https://www.youtube.com/watch?v=CODIGO_DEL_VIDEO</small>
                        </div>

                        <!-- Contenedor de la vista previa dinámico -->
                        <div class="video-preview" id="videoPreview"></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-between">
            <a href="/Admin/GestionPropiedades" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Volver
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Guardar Cambios
            </button>
        </div>
    </form>
</div>


<script src="~/js/adminEditar.js"></script>
@section Scripts {

@functions {
    public string ExtractYouTubeId(string url)
    {
        var regExp = new System.Text.RegularExpressions.Regex(@"^.*(youtu.be\/|v\/|u\/\w\/|embed\/|watch\?v=|&v=)([^#&?]*).*");
        var match = regExp.Match(url);
        return (match.Success && match.Groups[2].Length == 11) ? match.Groups[2].Value : null;

    }
  
}


<script>
 

    initAdminEditar(
        @Model.ImagenesExistentes.Count,
        @Model.Propiedad.Id,
        '@token',
        '@(Model is EditarCampoModel ? "campo" : "propiedad")'
    );


</script>
}