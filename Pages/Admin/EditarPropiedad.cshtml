@page "{id:int}"
@model GV.Pages.Admin.EditarPropiedadModel
@{
    ViewData["Title"] = "Editar Propiedad ";
    ViewData["HideTitle"] = true;
    Layout = "_AdminLayout";
}

<link rel="stylesheet" href="~/css/styleAdminEditar.css" />


<div class="admin-container">
    <div class="admin-header mb-4">
        <h1>@ViewData["Title"]</h1>
    </div>

    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Propiedad.Id" />

        <div class="row">
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5>Información Básica</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label" asp-for="Propiedad.Titulo"></label>
                            <input class="form-control" asp-for="Propiedad.Titulo" required>
                            <span asp-validation-for="Propiedad.Titulo" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" asp-for="Propiedad.Descripcion"></label>
                            <textarea class="form-control" asp-for="Propiedad.Descripcion" rows="4"></textarea>
                            <span asp-validation-for="Propiedad.Descripcion" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label" asp-for="Propiedad.Tipo"></label>
                                    <select class="form-select" asp-for="Propiedad.Tipo" required>
                                        <option value="Casa">Casa</option>
                                        <option value="Departamento">Departamento</option>
                                        <option value="Quinta">Quinta</option>
                                        <option value="Local">Local</option>
                                        <option value="Terreno">Terreno</option>
                                    </select>
                                    <span asp-validation-for="Propiedad.Tipo" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label" asp-for="Propiedad.Precio"></label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input class="form-control" asp-for="Propiedad.Precio" required>
                                    </div>
                                    <span asp-validation-for="Propiedad.Precio" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header">
                        <h5>Características</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="form-label" asp-for="Propiedad.Ambientes"></label>
                                    <input class="form-control" asp-for="Propiedad.Ambientes" type="number" min="1">
                                    <span asp-validation-for="Propiedad.Ambientes" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="form-label" asp-for="Propiedad.Dormitorios"></label>
                                    <input class="form-control" asp-for="Propiedad.Dormitorios" type="number" min="0">
                                    <span asp-validation-for="Propiedad.Dormitorios" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="form-label" asp-for="Propiedad.Banios"></label>
                                    <input class="form-control" asp-for="Propiedad.Banios" type="number" min="1">
                                    <span asp-validation-for="Propiedad.Banios" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label" asp-for="Propiedad.SuperficieTotal"></label>
                                    <input class="form-control" asp-for="Propiedad.SuperficieTotal" type="number">
                                    <span asp-validation-for="Propiedad.SuperficieTotal" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label" asp-for="Propiedad.SuperficieCubierta"></label>
                                    <input class="form-control" asp-for="Propiedad.SuperficieCubierta" type="number">
                                    <span asp-validation-for="Propiedad.SuperficieCubierta" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label" asp-for="Propiedad.Direccion"></label>
                                    <input class="form-control" asp-for="Propiedad.Direccion">
                                    <span asp-validation-for="Propiedad.Direccion" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label" asp-for="Propiedad.Ubicacion"></label>
                                    <select class="form-select" asp-for="Propiedad.Ubicacion">
                                       
                                        <option value="Saladillo">Saladillo</option>
                                        <option value="Las Flores">Las Flores</option>
                                        <option value="Roque Pérez">Roque Pérez</option>
                                        <option value="25 de mayo">25 de mayo</option>
                                    </select>
                                    <span asp-validation-for="Propiedad.Ubicacion" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5>Configuración</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3 form-check form-switch">
                            <input class="form-check-input" type="checkbox" asp-for="Propiedad.EsDestacada">
                            <label class="form-check-label" asp-for="Propiedad.EsDestacada"></label>
                        </div>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header">
                        <h5>Comodidades</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3 form-check">
                            <input class="form-check-input" type="checkbox" asp-for="Propiedad.Cochera">
                            <label class="form-check-label" asp-for="Propiedad.Cochera"></label>
                        </div>
                        <div class="mb-3 form-check">
                            <input class="form-check-input" type="checkbox" asp-for="Propiedad.Patio">
                            <label class="form-check-label" asp-for="Propiedad.Patio"></label>
                        </div>
                        <div class="mb-3 form-check">
                            <input class="form-check-input" type="checkbox" asp-for="Propiedad.Aire_acond">
                            <label class="form-check-label" asp-for="Propiedad.Aire_acond"></label>
                        </div>
                        <div class="mb-3 form-check">
                            <input class="form-check-input" type="checkbox" asp-for="Propiedad.Seguridad">
                            <label class="form-check-label" asp-for="Propiedad.Seguridad"></label>
                        </div>
                        <div class="mb-3 form-check">
                            <input class="form-check-input" type="checkbox" asp-for="Propiedad.Pileta">
                            <label class="form-check-label" asp-for="Propiedad.Pileta"></label>
                        </div>
                    </div>
                </div>

              <!-- Sección de Imágenes -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5>Imágenes</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label">Subir imágenes</label>
                            <input type="file" class="form-control" multiple accept="image/*">
                        </div>
                        <div class="image-preview">
                            @if (Model.Propiedad.Imagenes != null && Model.Propiedad.Imagenes.Any())
                            {
                                foreach (var imagen in Model.Propiedad.Imagenes)
                                {
                                    <div class="d-inline-block position-relative me-2 mb-2">
                                        <!-- Añade ~/ para asegurar rutas relativas a la raíz -->
                                        <img src="@Url.Content("~/" + imagen.Url)" class="img-thumbnail" width="120"
                                             onerror="this.src='/images/default-property.jpg';this.onerror=null;">
                                        @if (imagen.EsPrincipal)
                                        {
                                            <span class="position-absolute top-0 start-100 translate-middle badge bg-primary">
                                                Principal
                                            </span>
                                        }
                                    </div>
                                }
                            }
                            else
                            {
                                <p class="text-muted">No hay imágenes cargadas</p>
                            }
                        </div>
                    </div>
                </div>

                <!-- Sección de Videos -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5>Videos</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label">URL de YouTube</label>
                            <input type="text" class="form-control" name="VideoUrl" >
                        </div>
                        <div class="video-preview">
                            @if (Model.Propiedad.Videos != null && Model.Propiedad.Videos.Any())
                            {
                                foreach (var video in Model.Propiedad.Videos)
                                {
                                    <div class="mb-3">
                                        <div class="ratio ratio-16x9">
                                            @if (video.Url.Contains("youtube.com"))
                                            {
                                                <iframe src="@ConvertToEmbedUrl(video.Url)" 
                                                        frameborder="0" 
                                                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                                                        allowfullscreen></iframe>
                                            }
                                            else
                                            {
                                                <video controls>
                                                    <source src="@video.Url" type="video/mp4">
                                                    Tu navegador no soporta el elemento de video.
                                                </video>
                                            }
                                        </div>
                                        <div class="mt-2">
                                            <a href="@video.Url" target="_blank">@video.Url</a>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <p class="text-muted">No hay videos cargados</p>
                            }
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <div class="d-flex justify-content-between">
            <a href="/Admin/GestionPropiedades" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Volver
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Guardar Cambios
            </button>
        </div>
    </form>
</div>




@section Scripts {
    <!-- <partial name="_ValidationScriptsPartial" /> -->
    <script>

        // Deshabilitar campos cuando se selecciona Terreno

        document.addEventListener('DOMContentLoaded', function() {
            const tipoSelect = document.querySelector('select[name="Propiedad.Tipo"]');
            const camposTerreno = [
                document.querySelector('input[name="Propiedad.Ambientes"]'),
                document.querySelector('input[name="Propiedad.Dormitorios"]'),
                document.querySelector('input[name="Propiedad.Banios"]'),
                document.querySelector('input[name="Propiedad.SuperficieCubierta"]')
            ];

            function actualizarCampos() {
                const esTerreno = tipoSelect.value === 'Terreno';
                camposTerreno.forEach(campo => {
                    campo.disabled = esTerreno;
                    if (esTerreno) {
                        campo.value = '';
                    }
                });
            }

            tipoSelect.addEventListener('change', actualizarCampos);
            actualizarCampos(); // Ejecutar al cargar la página
        });


            @functions {
            // Método para convertir URLs de YouTube a formato embed
            public string ConvertToEmbedUrl(string url)
            {
                    if (url.Contains("youtube.com/watch?v="))
                    {
                            var videoId = url.Split(new[] { "v=" }, StringSplitOptions.None)[1];
                            var ampersandIndex = videoId.IndexOf('&');
                            if (ampersandIndex > 0)
                            {
                                    videoId = videoId.Substring(0, ampersandIndex);
                            }
                            return $"https://www.youtube.com/embed/{videoId}";
                    }
                    return url;
            }
    }

                document.addEventListener('DOMContentLoaded', function() {
            // Validación de URL de YouTube
            const videoInput = document.querySelector('input[name="VideoUrl"]');
            if (videoInput) {
                videoInput.addEventListener('change', function() {
                    const url = this.value;
                    if (url && !url.includes('youtube.com') && !url.includes('youtu.be')) {
                        alert('Por favor, ingrese una URL válida de YouTube');
                        this.value = '';
                    }
                });
            }
        });



                document.addEventListener('DOMContentLoaded', function() {
            // Depuración: Verifica todas las URLs de imágenes
            const images = document.querySelectorAll('.image-preview img');
            images.forEach(img => {
                console.log('URL de imagen:', img.src);

                // Verifica si la imagen se carga correctamente
                img.onerror = function() {
                    console.error('Error al cargar imagen:', this.src);
                    this.src = '/images/default-property.jpg';
                };
            });
        });
    </script>
}

