@page
@model IndexModel
@{
    ViewData["Title"] = "Inicio";
}

<link rel="stylesheet" href="css/styleIndex.css" />


<div class="slide-one-item home-slider owl-carousel">
    @if (Model.SliderImages.Any())
    {
        @foreach (var imagePath in Model.SliderImages)
        {
            <div class="site-blocks-cover overlay" style="background-image: url('@imagePath');">
                <div class="container">
                    <div class="row align-items-center justify-content-center">
                        <div class="col-md-7 text-center">
                            <!-- Puedes agregar contenido sobre la imagen si lo deseas -->
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <!-- Imagen por defecto si no hay imágenes -->
        <div class="site-blocks-cover overlay" style="background-image: url('/images/default-slider.jpg');">
            <div class="container">
                <div class="row align-items-center justify-content-center">
                    <div class="col-md-7 text-center">
                        <h1>Bienvenido</h1>
                        <p>No hay imágenes configuradas para el slider</p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>


<div class="search-overlay">
    <div class="container">
        <div class="row justify-content-center">
            <div class="form-search col-md-10 col-lg-8">
                <!-- Pestañas de división -->
                <div class="division-tabs mb-4">
                    <div class="division-tab active" data-tab="campos">DIVISIÓN CAMPOS</div>
                    <div class="division-tab" data-tab="urbano">DIVISIÓN URBANO</div>
                </div>

                <!-- Formulario Campos (visible por defecto) -->
                <form id="form-campos" class="tab-content active" method="get" asp-page="/PropertiesCampos">
                    <div class="row align-items-center">
                        <div class="col-md-3">
                            <label for="Aptitud">Aptitud</label>
                            <div class="select-wrap">
                                <span class="icon icon-arrow_drop_down"></span>
                                <select name="Aptitud" id="Aptitud" class="form-control d-block rounded-0">
                                    <option value="">Todos</option>
                                    <option value="Agrícola">Agrícola</option>
                                    <option value="Ganadera">Ganadera</option>
                                    <option value="Mixto">Mixto</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <label for="Superficie">Hectareas</label>
                            <div class="select-wrap">
                                <span class="icon icon-arrow_drop_down"></span>
                                <select name="Superficie" id="Superficie" class="form-control d-block rounded-0">
                                    <option value="">Todas</option>
                                    <option value="Menos de 50 Ha">0 - 50 Ha</option>
                                    <option value="50 - 100 Ha">50 - 100 Ha</option>
                                    <option value="100 - 200 Ha">100 - 200 Ha</option>
                                    <option value="200 - 500 Ha">200 - 500 Ha</option>
                                    <option value="Más de 500 Ha">Más de 500 Ha</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <label for="Ciudad">Ciudad</label>
                            <div class="select-wrap">
                                <span class="icon icon-arrow_drop_down"></span>
                                <select name="Ciudad" id="Ciudad" class="form-control d-block rounded-0">
                                    <option value="">Todas</option>
                                    <option value="Saladillo">Saladillo</option>
                                    <option value="25 de Mayo">25 de mayo</option>
                                    <option value="Las Flores">Las Flores</option>
                                    <option value="Roque Pérez">Roque Pérez</option>
                                    <option value="Otra">Otra</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <input type="submit" class="btn btn-success text-white btn-block rounded-0" value="Buscar">
                        </div>
                    </div>

                    <!-- Campos ocultos para otros filtros -->
                    <input type="hidden" name="PrecioMin" value="">
                    <input type="hidden" name="PrecioMax" value="">
                </form>

                <!-- Formulario Urbano -->
                <form id="form-urbano" class="tab-content" method="get" asp-page="/PropertiesUrbano" style="display: none;">
                    <div class="row align-items-center">
                        <div class="col-md-3">
                            <label for="Tipo">Tipo</label>
                            <div class="select-wrap">
                                <span class="icon icon-arrow_drop_down"></span>
                                <select name="Tipo" id="Tipo" class="form-control d-block rounded-0">
                                    <option value="">Todos</option>
                                    <option value="Casa">Casa</option>
                                    <option value="Departamento">Departamento</option>
                                    <option value="Quinta">Quinta</option>
                                    <option value="Local">Local</option>
                                    <option value="Terreno">Terreno</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <label for="Dormitorios">Dormitorios</label>
                            <div class="select-wrap">
                                <span class="icon icon-arrow_drop_down"></span>
                                <select name="Dormitorios" id="Dormitorios" class="form-control d-block rounded-0">
                                    <option value="">Todos</option>
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4+</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <label for="Ubicacion">Ciudad</label>
                            <div class="select-wrap">
                                <span class="icon icon-arrow_drop_down"></span>
                                <select name="Ubicacion" id="Ubicacion" class="form-control d-block rounded-0">
                                    <option value="">Todas</option>
                                    <option value="Saladillo">Saladillo</option>
                                    <option value="25 de Mayo">25 de mayo</option>
                                    <option value="Las Flores">Las Flores</option>
                                    <option value="Roque Pérez">Roque Pérez</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <input type="submit" class="btn btn-success text-white btn-block rounded-0" value="Buscar">
                        </div>
                    </div>

                    <!-- Campos ocultos para otros filtros -->
                    <input type="hidden" name="Ambientes" value="">
                    <input type="hidden" name="Banios" value="">
                    <input type="hidden" name="PrecioMin" value="">
                    <input type="hidden" name="PrecioMax" value="">
                </form>
            </div>
        </div>
    </div>
</div>
       
    
  
    




<!-- Propiedades Destacadas -->
<div class="site-section">
    <div class="container">
        <div class="row mb-5">
            <div class="col-md-12 text-center">
                <h2 class="section-title mb-3" style="font-family: 'Oswald', sans-serif; letter-spacing: 0.1em;">Propiedades Destacadas</h2>
                <p class="lead">Descubre nuestras selecciones exclusivas</p>
            </div>
        </div>

        <div class="row">
            @foreach (var propiedad in Model.PropiedadesDestacadas)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="property-entry h-100">
                        <div class="property-thumbnail">
                            @{
                                var imagenPrincipal = propiedad.Imagenes.FirstOrDefault(i => i.EsPrincipal) ??
                                propiedad.Imagenes.FirstOrDefault();
                            }
                            @if (imagenPrincipal != null)
                            {
                                <img src="@imagenPrincipal.Url" alt="@propiedad.Titulo" class="img-fluid">
                            }
                            else
                            {
                                <img src="/images/default-property.jpg" alt="Imagen no disponible" class="img-fluid">
                            }
                            <div class="offer-type">
                                <span class="bg-success">@propiedad.Tipo</span>
                            </div>
                        </div>
                        <div class="property-body p-4">
                            <h3 class="property-title mb-3">@propiedad.Titulo</h3>
                            <div class="property-location mb-3">
                                <i class="fas fa-map-marker-alt text-success mr-2"></i>
                                <span>@propiedad.Direccion, @propiedad.Ubicacion</span>
                            </div>
                            <div class="property-specs d-flex justify-content-between mb-3">
                                @if (propiedad.Dormitorios.HasValue)
                                {
                                    <span><i class="fas fa-bed text-muted mr-1"></i> @propiedad.Dormitorios Dorm.</span>
                                }
                                @if (propiedad.Banios.HasValue)
                                {
                                    <span><i class="fas fa-bath text-muted mr-1"></i> @propiedad.Banios Baños</span>
                                }
                                <span><i class="fas fa-vector-square text-muted mr-1"></i> @propiedad.SuperficieTotal m²</span>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <strong class="text-success h4 mb-0">USD @propiedad.Precio.ToString("N0")</strong>
                                <a asp-page="/Property" asp-route-id="@propiedad.Id" class="btn btn-outline-success btn-sm">Ver Detalles</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (Model.PropiedadesDestacadas.Any())
        {
            <div class="row mt-5">
                <div class="col-md-12 text-center">
                    <a asp-page="/PropertiesUrbano" class="btn btn-success px-5 py-3 rounded-0">Ver Todas las Propiedades</a>
                </div>
            </div>
        }
        else
        {
            <div class="row">
                <div class="col-md-12 text-center">
                    <p>No hay propiedades destacadas disponibles en este momento.</p>
                </div>
            </div>
        }
    </div>
</div>


