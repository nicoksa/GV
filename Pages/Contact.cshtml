@page
@model GV.Pages.ContactModel
@{
    ViewData["Title"] = "Contacto";
}

<link rel="stylesheet" href="css/styleOthersViews.css" />




<div class="site-blocks-cover inner-page-cover overlay" style="background-image: url(images/fondos/agricola3.jpg);"></div>


<div class="site-section site-section-sm bg-light">
    <div class="container">
        <!-- Encabezado de Contacto -->
        <div class="row mb-5 justify-content-center">
            <div class="col-lg-8 text-center">
                <h2 class="section-title mb-2"
                    style="font-family: 'Oswald', sans-serif; font-weight: 500; font-size: 2.4rem; letter-spacing: 1px; color: #2b2b2b;">
                    Ponete en contacto con nosotros
                </h2>
                <p class="lead mb-4" style="color: #555; font-size: 1.05rem;">
                    Completá el formulario y te responderemos a la brevedad con la atención que merecés
                </p>
                <hr style="border-top: 2px solid #8fc843; width: 120px; margin: 0 auto 2rem;">
            </div>
        </div>



        <div class="row">
            <div class="col-lg-6 mb-5 mb-lg-0">
                <!-- Formulario de Contacto -->
                <div class="contact-form bg-white p-4 shadow-sm">
                    <form action="https://api.web3forms.com/submit" method="POST" >
                        <!-- Campos requeridos por Web3Forms -->
                        <input type="hidden" name="access_key" value="5664b6f6-f5b0-45e2-a7e0-128cec685086">
                        <input type="hidden" name="redirect" id="web3redirect">
                        <input type="hidden" name="subject" value="Nuevo mensaje desde el formulario de contacto">
                        <input type="hidden" name="from_name" value="Sitio Web GV">

                     

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <div class="form-group">
                                    <label for="name" class="form-label small text-muted mb-1">NOMBRE</label>
                                    <input type="text" name="nombre" class="form-control border-0 border-bottom px-0" id="name" required>
                                </div>
                            </div>
                            <div class="col-md-6 mb-4">
                                <div class="form-group">
                                    <label for="email" class="form-label small text-muted mb-1">EMAIL</label>
                                    <input type="email" name="email" class="form-control border-0 border-bottom px-0" id="email" required>
                                </div>
                            </div>
                        </div>
                        <div class="mb-4">
                            <div class="form-group">
                                <label for="subject" class="form-label small text-muted mb-1">ASUNTO</label>
                                <input type="text" name="asunto" class="form-control border-0 border-bottom px-0" id="subject" required>
                            </div>
                        </div>
                        <div class="mb-4">
                            <div class="form-group">
                                <label for="message" class="form-label small text-muted mb-1">MENSAJE</label>
                                <textarea name="mensaje" class="form-control border-0 border-bottom px-0" id="message" rows="5" required></textarea>
                            </div>
                        </div>

                 

                        <div class="text-center">
                            <button type="submit" class="btn btn-custom px-4 py-2">
                                <i class="fas fa-paper-plane me-2"></i> ENVIAR MENSAJE
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="col-lg-6">
                <!-- Información de Contacto -->
                <div class="contact-info bg-white p-4 h-100 shadow-sm">
                    <h4 class="mb-4" style="font-family: 'Oswald', sans-serif; font-weight: 300;">NUESTRAS OFICINAS</h4>
                    
                    <div class="d-flex mb-4">
                        <div class="me-3" style="color: #8fc843;">
                            <i class="fas fa-map-marker-alt fa-lg"></i>
                        </div>
                        <div>
                            <h6 class="mb-1" style="font-weight: 500;">DIRECCIÓN</h6>
                            <p class="mb-0 text-muted">Martin Fierro 3253, Saladillo, Buenos Aires</p>
                        </div>
                    </div>
                    
                    <div class="d-flex mb-4">
                        <div class="me-3" style="color: #8fc843;">
                            <i class="fas fa-phone fa-lg"></i>
                        </div>
                        <div>
                            <h6 class="mb-1" style="font-weight: 500;">TELÉFONO</h6>
                            <p class="mb-0 text-muted">+54 2345 423974</p>
                        </div>
                    </div>
                    
                    <div class="d-flex mb-4">
                        <div class="me-3" style="color: #8fc843;">
                            <i class="fas fa-envelope fa-lg"></i>
                        </div>
                        <div>
                            <h6 class="mb-1" style="font-weight: 500;">EMAIL</h6>
                            <p class="mb-0 text-muted">gv.propiedades1@gmail.com</p>
                        </div>
                    </div>
                    
                    <div class="d-flex">
                        <div class="me-3" style="color: #8fc843;">
                            <i class="fas fa-clock fa-lg"></i>
                        </div>
                        <div>
                            <h6 class="mb-1" style="font-weight: 500;">HORARIO</h6>
                            <p class="mb-0 text-muted">Lunes a Viernes: 9:00 - 18:00</p>
                            <p class="mb-0 text-muted">Sábados: 9:00 - 13:00</p>
                        </div>
                    </div>

                    <!-- Redes Sociales -->
                    <div class="social-links d-flex flex-wrap gap-2 align-items-center">
                        <a href="https://www.facebook.com/gv.prop" class="text-decoration-none me-3 d-flex align-items-center">
                            <i class="fab fa-facebook-f fa-lg me-2"></i> <span>GV Propiedades</span>
                        </a>
                        <a href="https://www.instagram.com/gv.propiedades/" class="text-decoration-none me-3 d-flex align-items-center">
                            <i class="fab fa-instagram fa-lg me-2"></i> <span>gv.propiedades</span>
                        </a>
                        <a href="https://www.instagram.com/gattiniviolacampos/" class="text-decoration-none me-3 d-flex align-items-center">
                            <i class="fab fa-instagram fa-lg me-2"></i> <span>gattiniviolacampos</span>
                        </a>
                        <a href="" class="text-decoration-none me-3 d-flex align-items-center">
                            <i class="fab fa-youtube fa-lg me-2"></i> <span>Canal</span>
                        </a>
                        <a href="https://wa.me/542344542490" class="text-decoration-none d-flex align-items-center">
                            <i class="fab fa-whatsapp fa-lg me-2"></i> <span>+54 2344 542490</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<script>
    // Genera URL absoluta para el redirect
    document.getElementById('web3redirect').value = window.location.origin + '@Url.Page("/Thanks")';
</script>


